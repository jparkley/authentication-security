<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-lightbulb fa-5x"></i>
    <p class="subtitle">Share your thoughts and ideas anonymously!</p>
    <div class="secret-container">
      <% userWithSecrets.forEach(function(user){%>
      <p class="secret-text"><%=user.secret%></p>
      <% }) %>
    </div>
    <hr>

    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

<%- include('partials/footer') %>
